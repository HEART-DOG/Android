<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_mid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.1" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_mid2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.8"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_top4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.55" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_top6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.52" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_top2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.2" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_top7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.505" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_top5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.95" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_top3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.34"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_top1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.06"/>

    <TextView
        android:id="@+id/tv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="보드와 연결해주세요."
        android:textSize="15dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_warning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="* 연결하기 전에 데이터를 저장할 강아지를 선택해야합니다."
        android:textColor="@color/colorRed"
        android:textSize="10dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/tv_status"
        app:layout_constraintStart_toStartOf="@id/gl_left"
        app:layout_constraintEnd_toEndOf="@id/gl_right"/>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@color/colorBlack"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_selected_dog_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" "
        android:textSize="20dp"
        android:layout_marginTop="35dp"
        app:layout_constraintTop_toTopOf="@id/gl_top1"
        app:layout_constraintStart_toStartOf="@id/gl_mid"
        app:layout_constraintEnd_toEndOf="@id/gl_right"/>

    <TextView
        android:id="@+id/tv_heart"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="10"
        android:textStyle="bold"
        android:textSize="65sp"
        android:textColor="@color/colorWhite"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="@id/gl_mid"
        app:layout_constraintEnd_toEndOf="@id/gl_right"
        app:layout_constraintTop_toTopOf="@id/gl_top3"
        app:layout_constraintBottom_toBottomOf="@id/gl_top6"/>

    <ImageView
        android:id="@+id/iv_heart"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/static_heart"
        app:layout_constraintStart_toStartOf="@id/gl_left"
        app:layout_constraintEnd_toEndOf="@id/gl_mid"
        app:layout_constraintTop_toTopOf="@id/gl_top3"
        app:layout_constraintBottom_toTopOf="@id/gl_top6"/>

    <Button
        android:id="@+id/btn_dog_select"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_round_shape"
        android:layout_marginTop="20dp"
        android:text="강아지 선택"
        app:layout_constraintTop_toTopOf="@id/gl_top1"
        app:layout_constraintStart_toStartOf="@id/gl_left"
        />

    <Button
        android:id="@+id/btn_map_refresh"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/btn_round_shape"
        android:textSize="13dp"
        android:text="맵 새로고침"
        android:layout_marginBottom="5dp"
        app:layout_constraintTop_toTopOf="@id/gl_top7"
        app:layout_constraintStart_toStartOf="@id/gl_mid"
        app:layout_constraintEnd_toEndOf="@id/gl_right"
        app:layout_constraintBottom_toBottomOf="@id/gl_top4"
        />

    <fragment
        android:id="@+id/fragmentMap"
        android:name="com.google.android.gms.maps.MapFragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/gl_top4"
        app:layout_constraintStart_toStartOf="@id/gl_left"
        app:layout_constraintEnd_toEndOf="@id/gl_right"
        app:layout_constraintBottom_toBottomOf="@id/gl_top5"/>

    <Button
        android:id="@+id/btn_empty"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/btn_round_shape"
        app:layout_constraintStart_toStartOf="@id/gl_left"
        app:layout_constraintEnd_toEndOf="@id/gl_right"
        app:layout_constraintBottom_toBottomOf="@id/gl_top3"
        app:layout_constraintTop_toTopOf="@id/gl_top2"/>

    <TextView
        android:id="@+id/tv_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="온도"
        android:textSize="20dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        app:layout_constraintStart_toStartOf="@id/gl_mid"
        app:layout_constraintEnd_toEndOf="@id/gl_right"
        app:layout_constraintTop_toTopOf="@id/gl_top2"
        app:layout_constraintBottom_toTopOf="@id/tv_weatherinfo"/>

    <Button
        android:id="@+id/btn_renew"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/icon_renew"
        app:layout_constraintEnd_toEndOf="@id/gl_right"
        app:layout_constraintBottom_toBottomOf="@id/gl_top3"
        app:layout_constraintStart_toStartOf="@id/gl_mid2"/>

    <TextView
        android:id="@+id/tv_weatherinfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="날씨"
        android:layout_marginBottom="10dp"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@id/gl_mid"
        app:layout_constraintEnd_toStartOf="@id/btn_renew"
        app:layout_constraintBottom_toBottomOf="@id/gl_top3"/>

    <ImageView
        android:id="@+id/iv_weathericon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/gl_top3"
        app:layout_constraintEnd_toEndOf="@id/gl_mid"
        app:layout_constraintStart_toStartOf="@id/gl_left"
        app:layout_constraintTop_toTopOf="@id/gl_top2"
        app:srcCompat="@drawable/icon01" />

</androidx.constraintlayout.widget.ConstraintLayout>
